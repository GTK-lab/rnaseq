BootStrap: docker
From: ubuntu

%post
    DEBIAN_FRONTEND=noninteractive
    
    apt-get update && apt-get install -y \
	libssl-dev \
	libcurl4-openssl-dev \
	libxml2-dev \
	zlib1g-dev \
	libbz2-dev \
    r-base

    R -e "install.packages(c('BiocManager','remotes'), repos = 'http://cran.rstudio.com/')"
    R -e "BiocManager::install(c('rhdf5', 'tidyverse', 'optparse', 'ggplot2', 'RColorBrewer', 'pheatmap'))"
    R -e "remotes::install_github('pachterlab/sleuth')"

%environment
    export LC_ALL=C


%labels
    Plateau - Gao